<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/imageViewPet"
        android:layout_width="200dp"
        android:background="@drawable/PET1"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        />


    <TextView
        android:id="@+id/textViewWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewPet"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Welcome to MyPetPal!"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcomeMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Start"
        android:textColor="@android:color/white" />

</RelativeLayout>
