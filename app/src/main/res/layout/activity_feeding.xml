<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FeedingActivity">

    <ImageView
        android:id="@+id/imageViewPet"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:src="@drawable/PET3" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="693dp"
        android:layout_above="@+id/buttonFeed"
        android:layout_marginBottom="-166dp"
        android:src="@drawable/hungerlevel" />

    <TextView
        android:id="@+id/textViewFeedingMessage"
        android:layout_width="349dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/imageViewPet"
        android:layout_marginBottom="-107dp"
        android:text="Thank you for feeding me , These are my updated Levels !"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonFeed"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_alignBottom="@+id/textViewFeedingMessage"
        android:layout_marginBottom="-450dp"
        android:text="Clean Me Next!"
        android:textColor="@android:color/white" />


</RelativeLayout>
